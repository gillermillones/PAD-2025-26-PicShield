<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ps_bg"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:fitsSystemWindows="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/ps_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvTeacherTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panel del Profesor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvTeacherSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestiona actividades y fotos de tus alumnos"
                android:textSize="14sp"
                android:textColor="@color/ps_text_secondary"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateActivity"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Crear actividad"
                android:textAllCaps="true"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/ps_primary"
                android:textColor="@color/ps_on_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewGallery"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Ver actividades"
                android:textAllCaps="true"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp"
                app:strokeColor="@color/ps_primary"
                android:textColor="@color/ps_primary"/>

            <!-- NUEVO BOTÓN PARA BORRAR FACESET (SOLO PRUEBAS) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteFaceSet"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="RESET PRIVACIDAD (BORRAR FACESET)"
                android:textSize="10sp"
                android:textAllCaps="true"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Cerrar sesión"
                android:textAllCaps="true"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/ps_logout"
                android:textColor="@android:color/white"
                android:layout_marginTop="6dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>