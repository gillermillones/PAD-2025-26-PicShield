<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- TÍTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir Fotos de la Actividad"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <!-- BOTÓN SELECCIONAR IMÁGENES -->
    <Button
        android:id="@+id/btnPickImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Imágenes"
        android:layout_marginBottom="15dp" />

    <!-- PREVIEW DE IMÁGENES EN SCROLL HORIZONTAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fillViewport="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/previewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />

        </HorizontalScrollView>
    </ScrollView>

    <!-- BOTÓN SUBIR -->
    <Button
        android:id="@+id/btnUploadPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subir Fotos"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- BOTÓN VOLVER -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_gravity="end" />

</LinearLayout>
