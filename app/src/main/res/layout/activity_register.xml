<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- TARJETA DEL FORMULARIO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center_horizontal">

                    <!-- Título -->
                    <TextView
                        android:text="Crear Cuenta"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Únete a PicShield"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"/>

                    <!-- Radio Buttons -->
                    <TextView
                        android:text="Soy..."
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/rgUserType"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbParent"
                            android:text="Padre"
                            android:layout_marginEnd="16dp"
                            android:buttonTint="#4A148C"
                            android:textColor="#333333"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:id="@+id/rbTeacher"
                            android:text="Profesor"
                            android:buttonTint="#4A148C"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Inputs -->
                    <EditText
                        android:id="@+id/etEmail"
                        android:hint="Tu correo electrónico"
                        android:inputType="textEmailAddress"
                        android:background="@android:drawable/editbox_background_normal"
                        android:padding="16dp"
                        android:drawableStart="@android:drawable/ic_dialog_email"
                        android:drawablePadding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:hint="Elige una contraseña"
                        android:inputType="textPassword"
                        android:background="@android:drawable/editbox_background_normal"
                        android:padding="16dp"
                        android:drawableStart="@android:drawable/ic_lock_idle_lock"
                        android:drawablePadding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"/>

                    <!-- Botón Registrarse (Principal) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:text="Registrarse"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:backgroundTint="#4A148C"/>

                    <!-- Botón Volver (Texto limpio) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        android:text="¿Ya tienes cuenta? Inicia sesión"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>