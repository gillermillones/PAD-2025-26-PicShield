<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PicShield">

        <!-- LOGIN ACTIVITY: primera pantalla -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN ACTIVITY (ya no es la primera pantalla) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- REGISTER ACTIVITY -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- PARENT ACTIVITY -->
        <activity
            android:name=".ParentActivity"
            android:exported = "false" />

        <!-- GALLERY ACTIVITY -->
        <activity
            android:name=".GalleryActivity"
            android:exported = "false" />

        <!-- TEACHER ACTIVITY -->
        <activity
            android:name=".TeacherActivity"
            android:exported = "false" />

        <!-- REGISTER CHILD ACTIVITY -->
        <activity
            android:name=".RegisterChildActivity"
            android:exported = "false" />

        <!-- Upload Activity Photos Activity -->
        <activity
            android:name=".UploadActivityPhotosActivity"
            android:exported="false"/>



    </application>

</manifest>
